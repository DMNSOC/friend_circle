<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/dmea_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/friend_entry_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_image"
            android:clipToOutline="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp">
        </ImageView>
        <TextView
            android:id="@+id/friend_entry_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toEndOf="@id/friend_entry_head"
            android:layout_alignTop="@id/friend_entry_head"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textSize="14sp"
            >
        </TextView>
        <TextView
            android:id="@+id/friend_entry_dec"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:layout_below="@id/friend_entry_name"
            android:layout_alignStart="@id/friend_entry_name">
        </TextView>

        <RelativeLayout
            android:id="@+id/rv_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/friend_entry_dec"
            android:paddingHorizontal="68dp">
            <RelativeLayout
                android:id="@+id/ce_relative_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/re_images_zero"
                    android:layout_width="200dp"
                    android:layout_height="200dp">
                </ImageView>
                <TextView
                    android:id="@+id/video_time_zero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:background="@color/black_1"
                    android:layout_alignEnd="@id/re_images_zero"
                    android:layout_alignBottom="@id/re_images_zero">
                </TextView>
            </RelativeLayout>
            <GridLayout
                android:id="@+id/re_images_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="3">
                <RelativeLayout
                    android:id="@+id/ce_relative_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp">
                    <ImageView
                        android:id="@+id/re_images_one"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="centerCrop">
                    </ImageView>
                    <TextView
                        android:id="@+id/video_time_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:background="@color/black_1"
                        android:layout_alignEnd="@id/re_images_one"
                        android:layout_alignBottom="@id/re_images_one">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ce_relative_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp">
                    <ImageView
                        android:id="@+id/re_images_two"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="centerCrop">
                    </ImageView>
                    <TextView
                        android:id="@+id/video_time_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:background="@color/black_1"
                        android:layout_alignEnd="@id/re_images_two"
                        android:layout_alignBottom="@id/re_images_two">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ce_relative_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp">
                    <ImageView
                        android:id="@+id/re_images_three"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="centerCrop">
                    </ImageView>
                    <TextView
                        android:id="@+id/video_time_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:background="@color/black_1"
                        android:layout_alignEnd="@id/re_images_three"
                        android:layout_alignBottom="@id/re_images_three">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ce_relative_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp">
                    <ImageView
                        android:id="@+id/re_images_four"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="centerCrop">
                    </ImageView>
                    <TextView
                        android:id="@+id/video_time_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:background="@color/black_1"
                        android:layout_alignEnd="@id/re_images_four"
                        android:layout_alignBottom="@id/re_images_four">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ce_relative_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp">
                    <ImageView
                        android:id="@+id/re_images_five"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="centerCrop">
                    </ImageView>
                    <TextView
                        android:id="@+id/video_time_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:background="@color/black_1"
                        android:layout_alignEnd="@id/re_images_five"
                        android:layout_alignBottom="@id/re_images_five">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ce_relative_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp">
                    <ImageView
                        android:id="@+id/re_images_six"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="centerCrop">
                    </ImageView>
                    <TextView
                        android:id="@+id/video_time_six"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:background="@color/black_1"
                        android:layout_alignEnd="@id/re_images_six"
                        android:layout_alignBottom="@id/re_images_six">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ce_relative_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp">
                    <ImageView
                        android:id="@+id/re_images_seven"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="centerCrop">
                    </ImageView>
                    <TextView
                        android:id="@+id/video_time_seven"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:background="@color/black_1"
                        android:layout_alignEnd="@id/re_images_seven"
                        android:layout_alignBottom="@id/re_images_seven">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ce_relative_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp">
                    <ImageView
                        android:id="@+id/re_images_eight"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="centerCrop">
                    </ImageView>
                    <TextView
                        android:id="@+id/video_time_eight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:background="@color/black_1"
                        android:layout_alignEnd="@id/re_images_eight"
                        android:layout_alignBottom="@id/re_images_eight">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ce_relative_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp">
                    <ImageView
                        android:id="@+id/re_images_nine"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="centerCrop">
                    </ImageView>
                    <TextView
                        android:id="@+id/video_time_nine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:background="@color/black_1"
                        android:layout_alignEnd="@id/re_images_nine"
                        android:layout_alignBottom="@id/re_images_nine">
                    </TextView>
                </RelativeLayout>

            </GridLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/friend_entry_time"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/rv_images"
            android:layout_alignStart="@id/friend_entry_dec"
            android:layout_marginStart="0dp"
            android:layout_marginTop="21dp"
            android:textSize="11sp">
        </TextView>

        <ImageButton
            android:id="@+id/friend_entry_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/more_horiz"
            android:background="@color/transparent"
            android:layout_alignEnd="@id/friend_entry_time"
            android:padding="5dp">
        </ImageButton>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/catalogs_list"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/friend_entry_time"
            android:layout_alignStart="@id/friend_entry_dec"
            android:layout_marginTop="10dp"
            android:background="@drawable/grey_backdrop">
            <ImageView
                android:id="@+id/catalogs_favorite_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/favorite_border">
            </ImageView>
            <TextView
                android:id="@+id/catalogs_text"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text=""
                android:textColor="@color/grey_7D7D7D"
                android:layout_toEndOf="@id/catalogs_favorite_image"
                android:layout_marginTop="2dp">
            </TextView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/grey_7D7D7D"
            android:layout_below="@id/catalogs_list"
            android:layout_marginTop="10dp">
        </View>

    </RelativeLayout>


</RelativeLayout>